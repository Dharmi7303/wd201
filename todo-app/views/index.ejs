<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <meta name="csrf-token" content="<%- csrfToken %>" />

    <title>Document</title>
  </head>
  <script>
    var token = document
      .querySelector('meta[name="csrf-token"]')
      .getAttribute("content");

    function updateTodo({ todoID, completed }) {
      fetch(`/todos/${todoID}`, {
        method: "put",
        credentials: "same-origin", // <-- includes cookies in the request
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          completed: completed,
          _csrf: token,
        }),
      })
        .then((res) => {
          if (res.ok) window.location.reload();
        })
        .catch((error) => console.error(error));
    }
    function deleteTodo(id) {
      fetch(`/todos/${id}`, {
        method: "delete",
        credentials: "same-origin", // <-- includes cookies in the request
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          _csrf: token,
        }),
      })
        .then((res) => {
          if (res.ok) window.location.reload();
        })
        .catch((error) => console.error(error));
    }
  </script>

  <body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <h1 class="text-2xl font-semibold text-gray-600">My Todo-list</h1>
        <form action="/todos" method="post">
          <input type="hidden" name="_csrf" value="<%- csrfToken %>" />

          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input
                name="title"
                type="text"
                placeholder="What's next ?"
                class="border border-gray-300 text-gray-900 rounded w-full p-2 text-sm"
                required
              />
            </div>
            <div class="flex-auto">
              <input
                name="dueDate"
                type="date"
                class="border border-gray-300 text-gray-900 rounded w-full p-2 text-sm leading-4"
                required
              />
            </div>
            <div class="flex-none">
              <button
                type="submit"
                class="bg-green-600 text-white px-5 py-1.5 rounded font-medium"
              >
                Add
              </button>
            </div>
          </div>
        </form>
        <%- include('todos.ejs', {category: "Completed", id: "completed", todos:
        completed}) %>
        <!--  -->
        <%- include('todos.ejs', {category: "Overdue", id: "overdue", todos:
        overdue}) %>
        <!--  -->
        <%- include('todos.ejs', {category: "Due Today", id: "due-today", todos:
        dueToday}) %>
        <!--  -->
        <%- include('todos.ejs', {category: "Due Later", id: "due-later", todos:
        dueLater}) %>
      </div>
    </div>
  </body>
</html>
